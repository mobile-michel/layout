---
import "../styles/foundation.min.css";
import Footer from "./Footer.astro";
import Header from "./Header.astro";
const { title } = Astro.props;
---

<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="css/foundation.css" />
  </head>
  <body>
    <div class="grid-container">
      <div class="card">
        <Header />
        <main>
          <div class="">
            <slot />
          </div>
        </main>
        <Footer />
      </div>
    </div>

    <script is:inline src="/public/scripts/vendor/jquery.js"></script>
    <script is:inline src="/public/scripts/vendor/foundation.js"></script>
    <script is:inline src="/public/scripts/vendor/what-input.js"></script>
    <script is:inline src="/public/scripts/app.js"></script>
  </body>
</html>

<style>
  header {
    height: 10vh;
  }
</style>
